@model NEW_ALPHAL.Models.Product

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name) <!-- Hiển thị tên của Category thay vì ID -->
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsPremium)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsPremium)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
           
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="Product Image" style="max-width: 200px;" /> <!-- Hiển thị hình ảnh sản phẩm -->
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Likes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Likes) likes <!-- Thêm chữ "likes" để mô tả -->
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ViewCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ViewCount) views <!-- Thêm chữ "views" để mô tả -->
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
